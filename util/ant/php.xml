<?xml version="1.0" encoding="UTF-8"?>
<project>

  <target name="php"
    description="Install PHP dependencies"
    depends="php:install,php:lint,php:test">
  </target>

  <target name="php:update"
    description="Updates PHP dependencies.">
    <exec executable="composer" failonerror="true">
      <arg value="update"/>
    </exec>
  </target>

  <target name="php:install"
    description="Install PHP dependencies.">
    <exec executable="composer" failonerror="true">
      <arg value="install"/>
    </exec>
  </target>

  <target name="php:lint"
    description="Perform syntax check of sourcecode files.">
    <apply executable="php" failonerror="true">
      <arg value="-l" />
      <fileset dir="${basedir}/src">
        <include name="**/*.php" />
        <modified />
      </fileset>
      <fileset dir="${basedir}/test">
        <include name="**/*.php" />
        <modified />
      </fileset>
    </apply>
  </target>

  <target name="php:test"
    description="Run PHP tests.">
    <exec executable="${basedir}/vendor/bin/phpunit"
      failonerror="true">
    </exec>
  </target>

</project>
